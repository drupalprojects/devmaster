/**
 * Implementation of hook_install().
 */
function devshop_cloud_install() {
  // Create tables.
  drupal_install_schema('devshop_cloud');
}

/**
 * Implementation of hook_schema().
 */
function devshop_cloud_schema() {
  $schema['hosting_devshop_cloud_provider'] = array(
    'fields' => array(
      'nid' => array(
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
        'default' => 0,
      ),
      'provider_options' => array(
        'type' => 'text',
        'size' => 'big',
        'not null' => TRUE,
      ),
      'provider_data' => array(
        'type' => 'text',
        'size' => 'big',
        'not null' => TRUE,
      ),
      'provider_server_identifier' => array(
        'type' => 'text',
        'size' => 'tiny',
        'not null' => TRUE,
      ),
    ),
    'primary key' => array('nid'),
  );

  return $schema;
}
